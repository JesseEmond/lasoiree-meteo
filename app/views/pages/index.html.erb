<div class="container">
  <div class="row meteo valign-wrapper">
    <div class="col s4 offset-s1 metric valign">
      <div class="card cyan z-depth-1 center-align white-text">
        <div id="savard-degrees" class="card-content">
          <h1><%= number_with_precision(@savard_degrees, precision: 2) %></h1>
          <h6>°Savards</h6>
        </div>
        
        <div id="weighted-degrees-indicator" class="card-content">
          <h1><%= @weighted_degrees_indicator %></h1>
          <h6>Indice Pondéré de Température</h6>
        </div>

        <div class="card-action cyan lighten-4 menu">
          <div class="row">
            <ul class="tabs">
              <li class="tab col s6"><a href="#savard-degrees" class="active">°S</a></li>
              <li class="tab col s6"><a href="#weighted-degrees-indicator">IPdT</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <div class="col s3 offset-s1 cities">
      <ul class="collection z-depth-1">
        <% @cities[0..@cities.size/2-1].each do |city| %>
          <%= render partial: "city", object: city %>
        <% end %>
      </ul>
    </div>
    <div class="col s3 cities">
      <ul class="collection z-depth-1">
        <% @cities[@cities.size/2..@cities.size-1].each do |city| %>
          <%= render partial: "city", object: city %>
        <% end %>
      </ul>
    </div>

  </div>
</div>
